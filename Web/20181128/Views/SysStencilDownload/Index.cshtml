@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="layui-card">
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote">
            <div class="layui-inline">
                <div class="layui-form">
                    状态：
                    <div class="layui-input-inline">
                        <select name="State" lay-verify="" placeholder="" class="layui-select" id="txtState">
                            <option></option>
                            <option value="0">初始</option>
                            <option value="1">提交</option>
                            <option value="10">作废</option>
                            <option value="20">删除</option>
                        </select>
                    </div>
                    <a class="layui-btn" id="btnSearch">查询</a>
                    <a class="layui-btn layui-btn-normal " id="btnAdd">添加</a>
                </div>
            </div>
        </blockquote>
        <div class="layui-form">
            <table class="layui-table">
                <thead>
                    <tr>
                        <th style="text-align:left;">模版名称</th>
                        <th>备注</th>
                        <th>文件名称</th>
                        <th>状态</th>
                        <th>创建时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="SysStencillist" style="min-height:400px;"></tbody>
            </table>
            <div id="pageinfos" class="pagebox">
                <div id="Pagination" class="pagination"></div><div class="pagedetail">共0条记录</div>
            </div>
            <script type="text/html" id="temslist">
                {{each list as c}}
                <tr>
                    <td>{{c.StencilName}}</td>
                    <td>{{c.Remark}}</td>
                    <td>{{c.FileName}}</td>
                    <td>{{c.StateName}}</td>
                    <td>{{c.CreateTime}}</td>
                    <td>
                        <a class="layui-btn layui-btn-normal layui-btn-sm btnDownload" data-id="{{c.StencilId}}">
                            <i class="layui-icon"></i>下载
                        </a>
                        <a class="layui-btn layui-btn-normal layui-btn-sm btnView" data-id="{{c.StencilId}}">
                            <i class="layui-icon"></i>查看
                        </a>
                    </td>
                </tr>
                {{/each}}
            </script>


        </div>
        <div style="height:0px;position:relative;width:0px;overflow:hidden;">
            <input id="resetDialog" type="text" style="margin:30px 15px 10px 15px;height:30px;width:180px;" />
        </div>
    </div>
</div>

@section scripts{
    <script>
        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;
            //验证开始时间
            laydate.render({
                elem: '#txtCreateTime'
            });
        });

        // 定义页面索引及显示条数
        var pageIndex = 0;
        var pageSize = 15;

        // 绑定事件
        $(function () {
            // 查询
            SearchData();

            //查询按钮
            $(document).on('click', '#btnSearch', function () {
                SearchData();
            });

            //查看按钮
            $(document).on('click', '.btnView', function () {
                var tId = $(this).data("id");//运作要求id
                ShowData(tId);
            });

            //下载按钮
            $(document).on('click', '.btnDownload', function () {
                var tId = $(this).data("id");//运作要求id
                DownloadData(tId);
            });
        });

        // 查询总记录数
        function SearchData() {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#SysStencillist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/SysStencilDownload/SysStencilCount",
                async: false,
                data: {
                    state: $("#txtState").val() //提交状态
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Pagination").pagination(amount, {
                callback: PageCallbackOfCus,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCus(indexs, jq) {
            pageIndex = indexs;//页面索引
            InitCusTable(indexs);
        }

        // 查询数据
        function InitCusTable(pageIndexs) {
            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                state: $("#txtState").val() //提交状态
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/SysStencilDownload/SysStencilList',
                data: userjosn,
                success: function (data) {
                    $("#SysStencillist").html(template('temslist', { list: data }));
                    $(".forzentable").html(template('temslists', { list: data }));
                    $("#pageinfos").show();
                    if (data.length == 0) {
                        $("#pageinfos").hide();
                        $("#SysStencillist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }

        // 查看
        function ShowData(tId) {
            location.href = '/SysStencilDownload/Check?tId=' + tId;
        }

        //下载数据
        function DownloadData(tId) {
            top.window.operate = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '下载模板信息',
                content: '/SysStencilDownload/SysDownloadData?tId=' + tId,
                area: ['550px', '350px'],
            });
        }
    </script>
}


