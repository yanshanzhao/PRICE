@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Home.cshtml";
}


@model SRM.Model.Storage.StorageSupplierStartModel
<form class="layui-form layui-form-pane" action="/Storage/StorageSupplierStart/EditStorageSupplierStart" method="post">
    <div class="layui-card">
        <div class="layui-card-header">仓储选择申请信息</div>
        <div class="layui-card-body" style="overflow:hidden;">  
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请负责人</label>
                <div class="layui-input-inline"  >
                    <input id="txtApplyUser" type="text" value="@Model.ApplyUser" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请时间</label>
                <div class="layui-input-inline" >
                    <input id="txtApplyTime" type="text" value="@Model.ApplyTime" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请内容</label>
                <div class="layui-input-inline">
                    <input id="txtApplyContent" type="text" value="@Model.ApplyContent" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请备注</label>
                <div class="layui-input-inline">
                    <input id="txtApplyRemark" type="text" value="@Model.ApplyRemark" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">意向供应商</label>
                <div class="layui-input-inline">
                    <input id="txtSupplierName" type="text" value="@Model.SupplierName" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"style="width:130px;"><em>*</em>正式运作时间</label>
                <div class="layui-input-inline"style="width:170px;">
                    <input id="txtOfficialTime" type="text" name="OfficialTime" value="@Model.OfficialTime" lay-verify="required" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">参与培训</label>
                <div class="layui-input-block">
                    <input @(Html.Raw(Model.IsCultivate == 1 ? "checked" : "")) type="checkbox" lay-skin="switch" lay-filter="isCultivate" lay-text="是|否">
                    <input id="hdisCultivate" type="hidden" name="IsCultivate" value="@Model.IsCultivate" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">签订合同</label>
                <div class="layui-input-block">
                    <input @(Html.Raw(Model.SignContract == 1 ? "checked" : "")) type="checkbox" lay-skin="switch" lay-filter="signContract" lay-text="是|否">
                    <input id="hdSignContract" type="hidden" name="SignContract" value="@Model.SignContract" />
                </div>
            </div>
            <div id="divContractBeginTime" class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">合同开始时间</label>
                <div class="layui-input-inline">
                    <input id="txtContractBeginTime" type="text" name="ContractBeginTime" value="@Model.ContractBeginTimes" class="layui-input">
                </div>
            </div>
            <div id="divContractEndTime"  class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">合同结束时间</label>
                <div class="layui-input-inline">
                    <input id="txtContractEndTime" type="text" name="ContractEndTime" value="@Model.ContractEndTimes"  class="layui-input">
                </div>
            </div>
            <div id="divContractNumber" class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">合同编号</label>
                <div class="layui-input-inline">
                    <input id="txtContractNumber" type="text" name="ContractNumber" value="@Model.ContractNumber"   class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>结账周期</label>
                <div class="layui-input-inline">
                    <input id="txtAccountsPeriod" type="text" name="AccountsPeriod" value="@Model.AccountsPeriod" lay-verify="required" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>押金金额</label>
                <div class="layui-input-inline">
                    <input id="txtDeposit" type="text" name="Deposit" value="@Model.Deposit" lay-verify="required|Deposit" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">供应商编号</label>
                <div class="layui-input-block">
                    <textarea id="txtStorageNumber" name="SCMNumber"  class="layui-textarea" maxlength="100">@Model.SCMNumber</textarea>
                    <input name="StorageStartId" type="hidden" value="@Model.StorageStartId" />
                    <input name="SupplierId" type="hidden" value="@Model.SupplierId" />
                    <input name="StorageChooseId" type="hidden" value="@Model.StorageChooseId" />
                    <input name="AffirmStorageId" type="hidden" value="@Model.AffirmStorageId" />
                    <input name="StorageId" type="hidden" value="@Model.StorageId" />
                    <input name="SupplierId" type="hidden" value="@Model.SupplierId" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">采购编号</label>
                <div class="layui-input-block">
                    <textarea id="txtProcurementNumber" name="ProcurementNumber" class="layui-textarea" maxlength="100">@Model.ProcurementNumber</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">培训简介</label>
                <div class="layui-input-block">
                    <textarea id="txtCultivateIntro" name="CultivateIntro" class="layui-textarea">@Model.CultivateIntro</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">合作事项说明</label>
                <div class="layui-input-block">
                    <textarea id="txtCooperationRemark" name="CooperationRemark"  class="layui-textarea">@Model.CooperationRemark</textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">附件信息 </div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="margin-top:10px;">
                <input type="hidden" id="hdfiles" value="@ViewBag.files" />
                <input type="hidden" id="hdoldfiles" value="@ViewBag.oldfiles" name="SuppOldFileList" />
                <input type="hidden" id="hdfilelist" name="SuppFileListes" />
                <div class="layui-input-inline" style="width:800px;overflow:hidden;">
                    <div class="layui-btn-group" style="float:left;overflow:hidden;">
                        <div class="layui-inline">
                            <div class="layui-btn layui-btn-normal" id="btnUpload">上传文件</div>
                        </div>
                    </div>
                </div>
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="delfilelist('{{c.id}}')">删除</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:20%;margin:0 auto !important;">
                    <button class="layui-btn" lay-submit="" lay-filter="btnSave">保存</button>
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script>
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        //删除文件
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        //设置文件名称
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        //文件下载
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 开关
            form.on('switch(signContract)', function (data) {
                $("#hdSignContract").val(this.checked ? "1" : "0");

                if ($("#hdSignContract").val() == 1) {
                    $("#divContractBeginTime").show();
                    $("#divContractEndTime").show();
                    $("#divContractNumber").show(); 
                     
                }
                else if ($("#hdSignContract").val() == 0) {
                    $("#divContractBeginTime").hide();
                    $("#divContractEndTime").hide();
                    $("#divContractNumber").hide();
                    $("#txtContractBeginTime").val("")
                    $("#txtContractEndTime").val("")
                    $("#txtContractNumber").val("")
                }
            });
            // 开始日期
            var insStart = laydate.render({
                elem: '#txtContractBeginTime'
                , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
                , done: function (value, date) {
                    // 更新结束日期的最小日期
                    insEnd.config.min = lay.extend({}, date, {
                        month: date.month - 1
                    });

                    // 自动弹出结束日期的选择器
                    insEnd.config.elem[0].focus();
                }
            });

            // 结束日期
            var insEnd = laydate.render({
                elem: '#txtContractEndTime'
                , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
                , min: 0, btns: ['clear', 'confirm']
                , done: function (value, date) {
                    //更新开始日期的最大日期
                    insStart.config.max = lay.extend({}, date, {
                        month: date.month - 1
                    });
                }
            });

            //验证运作时间
            laydate.render({
                elem: '#txtOfficialTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });
             
            //// 签订合同
            //form.on('switch(signContract)', function (data) {
            //    $("#hdSignContract").val(this.checked ? "1" : "0");
            //});

            ////是否参与培训
            //form.on('switch(isCultivate)', function (data) {
            //    $("#hdisCultivate").val(this.checked ? "1" : "0");
            //});

            //验证金额（只能输入数字或小数）
            form.verify({
                Deposit: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数';
                    }
                }, 
            });

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Storage/StorageSupplierStart/Index&type=start',
                    area: ['450px', '300px'],
                });
            });

            ////文件上传
            //layui.upload.render({
            //    elem: '#btnUpload'
            //   , url: '/index/upload?type=storage'
            //   , accept: 'file'
            //   , auto: true
            //   , done: function (res) {
            //       if (res.flag == "ok") {
            //           filelist.push({ id: new Date().getTime(), path: res.path, filename: res.filename, ext: res.ext });
            //           initfiles();
            //       }
            //       return false;
            //   }
            //});

            // 保存
            form.on('submit(btnSave)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Storage/StorageSupplierStart/EditStorageSupplierStart",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('修改成功');
                            location.href = '/Storage/StorageSupplierStart/Index';
                        }
                    }
                });
                return false;
            });
        });
          
        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        // 页面加载事件
        $(function () {
            // 公式计算
            if ($("#hdSignContract").val() == 0) {
                $("#divContractBeginTime").hide();
                $("#divContractEndTime").hide();
                $("#divContractNumber").hide();
                $("#txtContractBeginTime").val("")
                $("#txtContractEndTime").val("")
                $("#txtContractNumber").val("")
            }
            else {
                $("#divContractBeginTime").show();
                $("#divContractEndTime").show();
                $("#divContractNumber").show();
            }

            // 供应商信息
            $(document).on('click', '#btnSupplier', function () {
                GetSupplier();
            });

            //修改上传文件名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });

                return false;
            });
            filelist = JSON.parse($("#hdfiles").val());
            initfiles();

            // 关闭按钮
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Storage/StorageSupplierStart/Index';
            });
        });


        // 设置供应商信息
        function setinfo(id, applyuser, applytime, applycontent, applyremark, affirmstorageidname, hdsupplierid) {
            $("#hdStorageChooseId").val(id);
            $("#txtApplyUser").val(applyuser);
            $("#txtApplyTime").val(applytime);
            $("#txtApplyContent").val(applycontent);
            $("#txtApplyRemark").val(applyremark);
            $("#txtAffirmStorageIdName").val(affirmstorageidname);
            $("#hdSupplierId").val(hdsupplierid);
        }

        // 仓储选择申请信息
        function GetSupplier() {
            top.window.topdialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '仓储选择申请信息',
                content: '/Storage/StorageSupplierStart/SupplierStartDetail?url=/Storage/StorageSupplierStart/Index',
                area: ['1100px', '600px'],
            });
        }
    </script>
}
