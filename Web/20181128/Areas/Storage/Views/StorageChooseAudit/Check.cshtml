@{
    ViewBag.Title = "Check";
    Layout = "~/Views/Shared/_Home.cshtml";
}


@model SRM.Model.Storage.StorageChooseAuditModel
<form class="layui-form layui-form-pane">
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商选择信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请负责人</label>
                <div class="layui-input-inline">
                    <input id="txtApplyUser" type="text" name="ApplyUser" value="@Model.ApplyUser" class="layui-input" disabled>
                    <input id="hdSupplierAuditId" type="hidden" name="SupplierAuditId" value="@Model.SupplierAuditId" />
                    <input id="hdPresentId" type="hidden" name="PresentId" value="@Model.PresentId" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请时间</label>
                <div class="layui-input-inline">
                    <input id="txtApplyTime" type="text" name="ApplyTime" value="@Model.ApplyTime" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请内容</label>
                <div class="layui-input-inline">
                    <input id="txtApplyContent" type="text" name="ApplyContent" value="@Model.ApplyContent" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">申请备注</label>
                <div class="layui-input-inline">
                    <input id="txtApplyRemark" type="text" name="ApplyRemark" value="@Model.ApplyRemark" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">意向供应商</label>
                <div class="layui-input-inline">
                    <input id="txtAffirmStorageName" type="text" name="AffirmStorageIdName" value="@Model.SupplierName" class="layui-input" disabled>
                    <input id="hdAffirmStorageId" type="hidden" name="AffirmStorageId" />
                    <input id="hdSupplierId" type="hidden" name="SupplierId" />
                </div>
            </div>
        </div>
    </div> 
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商信息明细</div>
        <input type="hidden" id="hdTransportId" name="TraChooseIdList" />
        <div class="layui-card-body">
            <div class="layui-form">
                <div class="forzenbox">
                    <div class="normaltable ">
                        <table class="layui-table">
                            <thead>
                                <tr>
                                    <th style="text-align:left;">仓储供应商编号</th>
                                    <th>供应商名称</th>
                                    <th>评估得分</th>
                                    <th>库房性质</th>
                                    <th>库区面积</th>
                                    <th>拟租托盘数量</th>
                                    <th>拟租面积</th>
                                    <th>拟租托盘</th>
                                    <th>仓库详细地址</th>
                                </tr>
                            </thead>
                            <tbody id="TraChooseDetaillist" style="min-height:400px;"></tbody>
                        </table>
                    </div>
                    <div class="forzentable"></div>
                </div>
                <div id="pageinfos" class="pagebox">
                    <div id="Pagination" class="pagination"></div><div class="pagedetail">共0条记录</div>
                </div>
                <script type="text/html" id="temslist">
                    {{each list as c}}
                    <tr data-id="{{c.StorageId}}" data-type="{{c.SupplierName}}">
                        <td>{{c.StorageNumber}}</td>
                        <td>{{c.SupplierName}}</td>
                        <td>{{c.AssessScore}}</td>
                        <td>{{c.StorageNatureName}}</td>
                        <td>{{c.TotalArea}}</td>
                        <td>{{c.TotalTray}}</td>
                        <td>{{c.RentArea}}</td>
                        <td>{{c.RentTray}}</td>
                        <td>{{c.Address}}</td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div style="height:0px;position:relative;width:0px;overflow:hidden;">
                <input id="resetDialog" type="text" style="margin:30px 15px 10px 15px;height:30px;width:180px;" />
            </div>
        </div>
    </div> 
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商选择审核信息</div>
        <div class="layui-form">
            <table class="layui-table">
                <thead>
                    <tr>
                        <th style="text-align:left;">申请机构</th>
                        <th>审核人员</th>
                        <th>审核时间</th>
                        <th>审核状态</th>
                    </tr>
                </thead>
                <tbody id="userlist" style="min-height:400px;"></tbody>
            </table>
            <div id="pageinfoss" class="pagebox">
                <div id="Paginations" class="pagination"></div><div class="pagedetail">共0条记录</div>
            </div>
            <script type="text/html" id="temslists">
                {{each list as c}}
                <tr>
                    <td>{{c.DepartmentName}}</td>
                    <td>{{c.TrueName}}</td>
                    <td>{{c.AuditTimes}}</td>
                    <td>{{c.StateName}}</td>
                </tr>
                {{/each}}
            </script>
        </div>

    </div>
    <div class="layui-form-item">
        <div class="layui-form-item">
            <label class="layui-form-label">审核意见</label>
            <div class="layui-input-block">
                <textarea id="txtAuditRemark" placeholder="审核意见" name="AuditRemark" lay-verify="required" maxlength="400" class="layui-textarea">@Model.AuditRemark</textarea>
            </div>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block" style="width:40%;margin:0 auto !important;">
            <button class="layui-btn" lay-submit="" lay-filter="btnThroughAudit">审核通过</button>
            <button class="layui-btn" lay-submit="" lay-filter="btnFailAudit">审核不通过</button>
            <button class="layui-btn" lay-submit="" lay-filter="btnReject">驳回</button>
            <a class="layui-btn" id="btnGoBack">关闭</a>
        </div>
    </div>
</form>

@section scripts{
    <script>
        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 审核通过
            form.on('submit(btnThroughAudit)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Storage/StorageChooseAudit/ThroughAudit",
                    data: data.field,
                    async: true,
                    success: function (data) {
                        if (data.flag == 'success') {
                            location.href = '/Storage/StorageChooseAudit/Index';
                            top.layer.msg(data.content);
                        }
                        if (data.flag == "fail") {
                            top.layer.msg(data.content);
                        }
                    }
                });
                return false;
            });

            // 驳回
            form.on('submit(btnReject)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Storage/StorageChooseAudit/RejectAudit",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            location.href = '/Storage/StorageChooseAudit/Index';
                            top.layer.msg(data.content);
                        }
                        if (data.flag == "fail") {
                            top.layer.msg(data.content);
                        }
                    }
                });
                return false;
            });

            // 审核不通过
            form.on('submit(btnFailAudit)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Tra/StorageChooseAudit/FailAudit",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            location.href = '/Tra/StorageChooseAudit/Index';
                            top.layer.msg(data.content);
                        }
                        if (data.flag == "fail") {
                            top.layer.msg(data.content);
                        }
                    }
                });
                return false;
            });

        });

        $(function () { 
            SearchData();
            SearchDatas();
            //setinfo();
            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Storage/StorageChooseAudit/Index';
            });
        });

        //// 设置供应商信息
        //function setinfo() {
        //    $.ajax({
        //        type: "POST",
