        //            if (data.length == 0) {
        //                $("#pageinfos").hide();
        //                $("#userlist").html("<div class='nodata'>暂无数据</div>")
        //            }
        //        }
        //    });
        //}

        // 定义页面索引及显示条数
        var pageIndex = 0;
        var pageSize = 15;

        // 查询总记录数
        function SearchData() {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#TraChooseDetaillist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/Storage/StorageChooseAudit/StorageChooseAuditdetaileditAmount",
                async: false,
                data: {
                    supplierAuditId: $("#hdSupplierAuditId").val()
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Pagination").pagination(amount, {
                callback: PageCallbackOfCus,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCus(indexs) {
            pageIndex = indexs;
            InitCusTable(indexs);
        }

        // 查询数据
        function InitCusTable(pageIndexs) {
            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                supplierAuditId: $("#hdSupplierAuditId").val()
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/Storage/StorageChooseAudit/StorageChooseAuditdetaileditList',
                data: userjosn,
                success: function (data) {
                    $("#TraChooseDetaillist").html(template('temslist', { list: data }));
                    $("#pageinfos").show();
                    if (data == null) {
                        $("#pageinfos").hide();
                        $("#TraChooseDetaillist").html("<div class='nodata'>暂无数据</div>")
                    }
                    if (data.length == 0) {
                        $("#pageinfos").hide();
                        $("#TraChooseDetaillist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }


        // 查询总记录数
        function SearchDatas() {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#userlist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/Storage/StorageChooseAudit/StorageChooseAuditInfoAmount",
                async: false,
                data: {
                    supplierAuditId: $("#hdSupplierAuditId").val()
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Paginations").pagination(amount, {
                callback: PageCallbackOfCuss,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCuss(indexs) {
            pageIndex = indexs;
            InitCusTables(indexs);
        }

        // 查询数据
        function InitCusTables(pageIndexs) {
            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                supplierAuditId: $("#hdSupplierAuditId").val()
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/Storage/StorageChooseAudit/StorageChooseAuditInfoList',
                data: userjosn,
                success: function (data) {
                    $("#userlist").html(template('temslists', { list: data }));
                    $("#pageinfoss").show();
                    if (data == null) {
                        $("#pageinfoss").hide();
                        $("#userlist").html("<div class='nodata'>暂无数据</div>")
                    }
                    if (data.length == 0) {
                        $("#pageinfoss").hide();
                        $("#userlist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }
    </script>
}