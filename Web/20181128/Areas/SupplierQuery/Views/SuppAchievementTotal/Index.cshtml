@{ 
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="layui-card">
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote">
            <div class="layui-form">
                <div class="layui-inline">
                    RDC：
                    <div class="layui-input-inline">
                        <input id="txtDepartmentName" type="text" value="" placeholder="部门名称" class="layui-input">
                    </div>                    
                    &nbsp;&nbsp;
                    考核年：
                    <div class="layui-input-inline">
                        <select class="select" id="selYear"></select>
                    </div>                    
                    &nbsp;&nbsp;
                    考核月：
                    <div class="layui-input-inline">
                        <select class="select" id="selMonth">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                        </select>
                    </div>
                    <div class="layui-inline" style="margin-left:10px;">
                        <a class="layui-btn" id="btnSearch">查询</a>
                        <a class="layui-btn layui-btn-primary " id="btnExport">导出</a>
                    </div>
                </div>
            </div>
        </blockquote>
        <div class="layui-form">
            <table class="layui-table">
                <thead>
                    <tr>
                        <th style="text-align:left;">序号</th>
                        <th>RDC</th>
                        <th>调拨</th>
                        <th>干线</th>
                        <th>终端</th>  
                    </tr>
                </thead>
                <tbody id="userlist" style="min-height:400px;"></tbody>
            </table>
            <div id="pageinfos" class="pagebox">
                <div id="Pagination" class="pagination"></div><div class="pagedetail">共0条记录</div>
            </div>
            <script type="text/html" id="temslist">
                {{each list as c}}
                <tr>
                    <td>{{c.Number}}</td>
                    <td>{{c.DepartmentName}}</td>
                    <td>{{c.Allocation}}</td>
                    <td>{{c.TrunkLine}}</td>
                    <td>{{c.BranchEnd}}</td> 
                    {{/each}}
            </script>
        </div>
    </div>
</div>

@section scripts{
    <script>
        layui.use(['form', 'element', 'table', 'layer'], function () {
            var form = layui.form, ele = layui.element, table = layui.table;
        });

        // 定义页面索引及显示条数
        var pageIndex = 0;
        var pageSize = 15;

        // 绑定事件
        $(function () {

            // 考核年
            GetYear();

            // 考核月
            var myDate = new Date(); 
            var CurrentMonth = myDate.getMonth(); 
            $("#selMonth").val(CurrentMonth);

            // 查询
            SearchData();

            // 查询
            $(document).on('click', '#btnSearch', function () {
                SearchData();
            });

            // 导出
            $(document).on('click', '#btnExport', function () {
                top.window.export = top.layui.layer.load(1, { shade: [0.3, '#000'] });
                $.post('/SupplierQuery/SuppAchievementTotal/Export'
                    , {
                        departmentName: $("#txtDepartmentName").val(),
                        year: $("#selYear").val(),
                        month: $("#selMonth").val() 
                    }
                    , function (data) {
                        if (data.flag == 'noauth') {
                            top.layui.layer.close(top.window.export);
                            top.layui.layer.msg(data.content);
                        }
                        if (data.flag == 'success') {
                            location.href = '/excel/down?guid=' + data.guid + "&name=运输月度考核";
                            top.layui.layer.close(top.window.export);
                        }
                    }, 'json');
            });
        });
         
        // 考核年
        function GetYear() {
            
            // 时间
            var myDate = new Date();

            var CurrentYear = myDate.getFullYear();

            // 起始年份 
            var startYear = CurrentYear - 5;

            //结束年份 
            var endYear = CurrentYear + 5;
             
            for (var i=startYear;i<=endYear;i++) 
            { 
                $("#selYear").append(new Option(i, i));
            } 
            $("#selYear").val(CurrentYear); 
        }
         
        // 查询总记录数
        function SearchData() {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#userlist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/SupplierQuery/SuppAchievementTotal/MonthCheckAmount",
                async: false,
                data: { 
                    departmentName: $("#txtDepartmentName").val(),
                    year: $("#selYear").val(),
                    month: $("#selMonth").val()
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Pagination").pagination(amount, {
                callback: PageCallbackOfCus,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCus(indexs, jq) {
            pageIndex = indexs;
            InitCusTable(indexs);
        }

        // 查询数据
        function InitCusTable(pageIndexs) {

            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                departmentName: $("#txtDepartmentName").val(),
                year: $("#selYear").val(),
                month: $("#selMonth").val()
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/SupplierQuery/SuppAchievementTotal/MonthCheckList',
                data: userjosn,
                success: function (data) {
                    $("#userlist").html(template('temslist', { list: data }));
                    $("#pageinfos").show();
                    if (data.length == 0) {
                        $("#pageinfos").hide();
                        $("#userlist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }
    </script>
}
