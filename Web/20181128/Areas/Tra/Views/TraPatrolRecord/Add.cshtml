@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<form class="layui-form layui-form-pane" action="/Tra/TraPatrolRecord/AddTraPatrolRecord" method="post">
    <div class="layui-card" id="clearDivinput">
        <div class="layui-card-header">过程巡查维护信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:15%;">
                <div class="layui-btn" id="btnTraPatrol" style="width:100%;" title="点击选取仓储选择申请信息">选择过程巡查维护</div>
            </div>
            <div class="layui-form-item"style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"style="width:130px;">运输供应商名称</label>
                <div class="layui-input-inline"style="width:170px;"> 
                    <input id="txtSupplieName" type="text" placeholder="运输供应商名称" class="layui-input" lay-verify="traPatrol" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">巡查类型</label>
                <div class="layui-input-inline">
                    <input id="txtPatrolType" type="text" placeholder="巡查类型" class="layui-input" lay-verify="traPatrol" disabled>
                    <input id="hdPatrolId" type="hidden" name="PatrolId" />
                    <input id="hdPatrolAllotId" type="hidden" name="PatrolAllotId" />
                    <input id="hdPatrolNumber" type="hidden" name="PatrolNumber" /> 
                    <input id="hdSupplierNumber" type="hidden" name="SupplierNumber" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">巡查内容</label>
                <div class="layui-input-block">
                    <textarea id="txtPatrolContent" placeholder="巡查内容" name="PatrolContent" lay-verify="traPatrol" class="layui-textarea" disabled></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">巡查备注</label>
                <div class="layui-input-block">
                    <textarea id="txtPatrolRemark" placeholder="巡查备注" name="PatrolRemark"  class="layui-textarea" disabled></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">过程巡查记录信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>巡查时间</label>
                <div class="layui-input-inline">
                    <input id="txtRecordTime" type="text" name="RecordTime" lay-verify="required" placeholder="巡查时间" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>巡查负责人</label>
                <div class="layui-input-inline">
                    <input id="txtRecordUsers" type="text" name="RecordUsers" lay-verify="required" placeholder="巡查负责人" class="layui-input">
                </div>
            </div> 
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"style="width:130px;"><em>*</em>是否异常整改</label>
                <div class="layui-input-inline"style="width:170px;"> 
                    <select type="text" name="NormState" lay-verify="required" placeholder="" class="layui-input" id="txtNormState">
                        <option></option>
                        <option value="0">否</option>
                        <option value="1">是</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>巡查得分</label>
                <div class="layui-input-inline">
                    <input id="txtRecordScore" type="text" name="RecordScore" lay-verify="required" placeholder="巡查得分" class="layui-input">
                </div>
            </div> 
            <div class="layui-form-item">
                <label class="layui-form-label">巡查备注</label>
                <div class="layui-input-block">
                    <textarea id="txtRecordRemark" placeholder="巡查备注" name="RecordRemark" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">异常备注</label>
                <div class="layui-input-block">
                    <textarea id="txtNormRemark" placeholder="异常备注" name="NormRemark" class="layui-textarea"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">附件信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item">
                <input type="hidden" id="hdfilelist" name="TraPatrolRecordFileList" />
                <div class="layui-input-inline" style="width:800px;overflow:hidden;">
                    <div class="layui-btn-group" style="float:left;overflow:hidden;">
                        <div class="layui-inline">
                            <div class="layui-btn layui-btn-normal" id="btnUpload">上传文件</div>
                        </div>
                    </div>
                    <script type="text/html" id="temfilelists">
                        {{each list as c}}
                        <div class="layui-btn-group" style="margin-bottom:5px;">
                            <div class="layui-btn layui-btn-primary">
                                <span class="modify" data-id="{{c.id}}">{{c.filename}}</span>{{c.ext}}
                                <em onclick="downfile('{{c.id}}')"><i class="layui-icon layui-icon-download-circle"></i></em>
                                <em onclick="delfilelist('{{c.id}}')"><i class="layui-icon layui-icon-close-fill"></i></em>
                            </div>
                        </div>
                        {{/each}}
                    </script>
                    <script type="text/html" id="temdictlist">
                        {{each list as c}}
                        <option value="{{c.id}}">{{c.name}}</option>
                        {{/each}}
                    </script>
                </div>
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="delfilelist('{{c.id}}')">删除</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:20%;margin:0 auto !important;">
                    <button class="layui-btn" lay-submit="" lay-filter="btnSave">保存</button>
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            //巡查时间
            laydate.render({
                elem: '#txtRecordTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });

            form.verify({
                traPatrol: function (value, item) {
                    if (!value) {
                        return '巡查维护信息不能为空！';
                    }
                }
            });

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Tra/TraPatrolRecord/Index&type=record',
                    area: ['450px', '300px'],
                });
            });

            ////文件上传
            //layui.upload.render({
            //    elem: '#btnUpload'
            //   , url: '/index/upload?type=tra'
            //   , accept: 'file'
            //   , auto: true
            //   , done: function (res) {
            //       if (res.flag == "ok") {
            //           filelist.push({ id: new Date().getTime(), path: res.path, filename: res.filename, ext: res.ext });
            //           initfiles();
            //       }
            //       return false;
            //   }
            //});

            // 保存
            form.on('submit(btnSave)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Tra/TraPatrolRecord/AddTraPatrolRecord",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('添加成功');
                            location.href = '/Tra/TraPatrolRecord/Index';
                        }
                        if (data.flag == "fail") {
                            layui.layer.msg('信息添加失败');
                        }
                    }
                });
                return false;
            });
        });

        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        $(function () {

            //点击后退按钮，清除form表单中文本框的值
            $("#clearDivinput input").val(""); 
            $("#clearDivinput textarea").val("");

            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Tra/TraPatrolRecord/Index';
            });

            // 巡查维护信息
            $(document).on('click', '#btnTraPatrol', function () {
                GetTraPatrol();
            });

            // 修改上传上级名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });
                return false;
            });
        });

        // 设置巡查维护信息
        function setinfo(id, patrolAllotId, patrolnumber, suppliername, suppliernumber, patroltype, patrolcontent, patrolremark) {
            $("#hdPatrolId").val(id); 
            $("#hdPatrolAllotId").val(patrolAllotId);
            $("#hdPatrolNumber").val(patrolnumber);
            $("#txtSupplieName").val(suppliername);
            $("#hdSupplierNumber").val(suppliernumber);
            $("#txtPatrolType").val(patroltype);
            $("#txtPatrolContent").val(patrolcontent);
            $("#txtPatrolRemark").val(patrolremark);
        }

        // 巡查维护信息
        function GetTraPatrol() {
            top.window.topdialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '巡查维护信息',
                content: '/Tra/TraPatrolRecord/TraPatrolRecordDetail?url=/Tra/TraPatrolRecord/Index',
                area: ['1100px', '600px'],
            });
        }
    </script>
}
