@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<form class="layui-form layui-form-pane" action="/Tra/TraSupplierNotification/AddTraSupplierNotification" method="post">
    <div class="layui-card" id="clearDivinput">
        <div class="layui-card-header">供应商基本信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:100%;clear:none !important; float:left;">
                <div class="layui-btn" id="btnTraSupplierInfo" style="width:15%;" title="选择供应商基本信息">供应商基本信息</div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">供应商名称</label>
                <div class="layui-input-inline">
                    <input id="txtSupplierName" type="text" placeholder="供应商名称" class="layui-input" lay-verify="supplier" disabled>
                    <input id="hdNotificationId" type="hidden" name="NotificationId" />
                    <input id="hdTransportId" type="hidden" name="TransportId" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:130px;">运输供应商编号</label>
                <div class="layui-input-inline" style="width:170px;">
                    <input id="txtTransportNumber" type="text" placeholder="运输供应商编号" class="layui-input" lay-verify="supplier" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">通知编号</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationNumber" type="text" placeholder="通知编号" class="layui-input" lay-verify="supplier" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">暨邀请函名称</label>
                <div class="layui-input-inline">
                    <input id="txtInvitationName" type="text" placeholder="暨邀请函名称" class="layui-input" lay-verify="supplier" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">投标线路</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationLines" type="text" placeholder="投标线路" class="layui-input" lay-verify="supplier" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">招标备注</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationRemark" type="text" placeholder="招标备注" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">供应商招标的信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>投标保证金</label>
                <div class="layui-input-block">
                    <input id="txtDeposit" type="text" name="Deposit" lay-verify="required|deposit" placeholder="投标保证金" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><em>*</em>供应商简介</label>
                <div class="layui-input-block">
                    <textarea id="txtSuppExpertise" placeholder="供应商简介" name="SuppExpertise" lay-verify="required" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><em>*</em>价格概述</label>
                <div class="layui-input-block">
                    <textarea id="txtPriceSummarize" placeholder="价格概述" name="PriceSummarize" lay-verify="required" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label" style="width:116px;"><em>*</em>服务质量措施</label>
                <div class="layui-input-inline" style="width:973px; margin-right:0 !important">
                    <textarea id="txtServiceMeasure" placeholder="服务质量措施" name="ServiceMeasure" lay-verify="required" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">优惠政策</label>
                <div class="layui-input-block">
                    <textarea id="txtDiscountsPolicy" placeholder="优惠政策" name="DiscountsPolicy" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label" style="width:116px;">供应商投标备注</label>
                <div class="layui-input-inline" style="width:973px; margin-right:0 !important">
                    <textarea id="txtSuppNotificationRemark" placeholder="供应商投标备注" name="SuppNotificationRemark" class="layui-textarea"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">附件信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item">
                <input type="hidden" id="hdfilelist" name="SuppNotificationFileList" />
                <div class="layui-input-inline" style="width:800px;overflow:hidden;">
                    <div class="layui-btn-group" style="float:left;overflow:hidden;">
                        <div class="layui-inline">
                            <div class="layui-btn layui-btn-normal" id="btnUpload">上传文件</div>
                        </div>
                    </div>
                    <script type="text/html" id="temfilelists">
                        {{each list as c}}
                        <div class="layui-btn-group" style="margin-bottom:5px;">
                            <div class="layui-btn layui-btn-primary">
                                <span class="modify" data-id="{{c.id}}">{{c.filename}}</span>{{c.ext}}
                                <em onclick="downfile('{{c.id}}')"><i class="layui-icon layui-icon-download-circle"></i></em>
                                <em onclick="delfilelist('{{c.id}}')"><i class="layui-icon layui-icon-close-fill"></i></em>
                            </div>
                        </div>
                        {{/each}}
                    </script>
                    <script type="text/html" id="temdictlist">
                        {{each list as c}}
                        <option value="{{c.id}}">{{c.name}}</option>
                        {{/each}}
                    </script>
                </div>
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="delfilelist('{{c.id}}')">删除</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:20%;margin:0 auto !important;">
                    <button class="layui-btn" lay-submit="" lay-filter="btnSave">保存</button>
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }
        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Tra/TraSupplierNotification/Index&type=bid',
                    area: ['450px', '300px'],
                });
            });

            ////文件上传
            //layui.upload.render({
            //    elem: '#btnUpload'
            //   , url: '/index/upload?type=tra'
            //   , accept: 'file'
            //   , auto: true
            //   , done: function (res) {
            //       if (res.flag == "ok") {
            //           filelist.push({ id: new Date().getTime(), path: res.path, filename: res.filename, ext: res.ext });
            //           initfiles();
            //       }
            //       return false;
            //   }
            //});

            //验证招标开始时间
            laydate.render({
                elem: '#txtNotificationBeginTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });

            //验证招标结束时间
            laydate.render({
                elem: '#txtNotificationEndTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });

            form.verify({
                supplier: function (value, item) {
                    if (!value) {
                        return '供应商基本信息不能为空！';
                    }
                },
                deposit: function (value, item) { //value：表单的值、item：表单的DOM对象
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数！';
                    }
                }
            });

            // 保存
            form.on('submit(btnSave)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Tra/TraSupplierNotification/AddTraSupplierNotification",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('添加成功');
                            location.href = '/Tra/TraSupplierNotification/Index';
                        }
                        if (data.flag == "fail") {
                            layui.layer.msg('信息添加失败');
                        }
                    }
                });
                return false;
            });
        });

        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        $(function () {

            //点击后退按钮，清除文本框的值
            $("#clearDivinput input").val("");

            // 供应商基本信息
            $(document).on('click', '#btnTraSupplierInfo', function () {
                GetTraSupplierInfo();
            });

            // 修改上传上级名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });
                return false;
            });

            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Tra/TraSupplierNotification/Index';
            });
        });

        // 设置供应商基本信息
        function setinfo(notificationid, transportid, suppliername, transportnumber, notificationnumber, invitationname, notificationlines, notificationremark) {
            $("#hdNotificationId").val(notificationid);
            $("#hdTransportId").val(transportid);
            $("#txtSupplierName").val(suppliername);
            $("#txtTransportNumber").val(transportnumber);
            $("#txtNotificationNumber").val(notificationnumber);
            $("#txtInvitationName").val(invitationname);
            $("#txtNotificationLines").val(notificationlines);
            $("#txtNotificationRemark").val(notificationremark);
        }

        // 供应商基本信息
        function GetTraSupplierInfo() {
            top.window.topdialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '供应商基本信息',
                content: '/Tra/TraSupplierNotification/TraSuppLierInfo?url=/Tra/TraSupplierNotification/Index',
                area: ['1100px', '600px'],
            });
        }
    </script>
}
