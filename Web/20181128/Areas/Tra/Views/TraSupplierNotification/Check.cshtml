@{
    ViewBag.Title = "Check";
    Layout = "~/Views/Shared/_Home.cshtml";
}

@model SRM.Model.Tra.TraSupplierNotificationModel

<form class="layui-form layui-form-pane" action="/Tra/TraSupplierNotification/EditTraSupplierNotification" method="post">
    <div class="layui-card">
        <div class="layui-card-header">供应商基本信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">供应商名称</label>
                <div class="layui-input-inline">
                    <input id="hdNotificationId" type="hidden" name="TraChooseId" value="@Model.NotificationId" />
                    <input id="hdTransportId" type="hidden" name="NotificationId" value="@Model.TransportId" />
                    <input type="text" name="SupplierName" value="@Model.SupplierName" maxlength="30" lay-verify="required" placeholder="" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:130px;">运输供应商编号</label>
                <div class="layui-input-inline" style="width:170px;">
                    <input type="text" name="TransportNumber" value="@Model.TransportNumber" lay-verify="required" placeholder="" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">通知编号</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationNumber" name="NotificationNumber" type="text" value="@Model.NotificationNumber" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">暨邀请函名称</label>
                <div class="layui-input-inline">
                    <input id="txtInvitationName" name="InvitationName" type="text" value="@Model.InvitationName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">投标线路</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationLines" name="NotificationLines" type="text" value="@Model.NotificationLines" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">招标备注</label>
                <div class="layui-input-inline">
                    <input id="txtNotificationRemark" name="NotificationRemark" type="text" value="@Model.NotificationRemark" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">供应商招标的信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">投标保证金</label>
                <div class="layui-input-inline">
                    <input id="txtDeposit" type="text" name="Deposit" value="@Model.Deposit" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">供应商简介</label>
                <div class="layui-input-block">
                    <textarea id="txtSuppExpertise" name="SuppExpertise" lay-verify="required" class="layui-textarea" disabled>@Model.SuppExpertise</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">价格概述</label>
                <div class="layui-input-block">
                    <textarea id="txtPriceSummarize" name="PriceSummarize" lay-verify="required" class="layui-textarea" disabled>@Model.PriceSummarize</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label" style="width:116px;">服务质量措施</label>
                <div class="layui-input-inline" style="width:973px; margin-right:0 !important">
                    <textarea id="txtServiceMeasure" name="ServiceMeasure" lay-verify="required" class="layui-textarea" disabled>@Model.ServiceMeasure</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">优惠政策</label>
                <div class="layui-input-block">
                    <textarea id="txtDiscountsPolicy" name="DiscountsPolicy" lay-verify="required" class="layui-textarea" disabled>@Model.DiscountsPolicy</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label" style="width:116px;">供应商投标备注</label>
                <div class="layui-input-inline" style="width:973px; margin-right:0 !important">
                    <textarea id="txtSuppNotificationRemark" name="SuppNotificationRemark" lay-verify="required" class="layui-textarea" disabled>@Model.SuppNotificationRemark</textarea>
                </div>
            </div>  
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">附件信息 </div>
        <div class="layui-card-body" style="overflow:hidden;">
            @*<label style="color:lightcoral">温馨提示：单击文件名修改名称❀</label>*@
            <div class="layui-form-item" style="margin-top:10px;">
                <input type="hidden" id="hdfiles" value="@ViewBag.files" />
                <input type="hidden" id="hdoldfiles" value="@ViewBag.oldfiles" name="SuppOldFileList" />
                <input type="hidden" id="hdfilelist" name="SuppNotificationFileList" />
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="downfile('{{c.id}}')">下载</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:30%;margin:0 auto !important;">
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script>
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    if (filelist[i].path.lastIndexOf('.') != -1) {
                        var lastnum = filelist[i].path.lastIndexOf('.');
                        var exts = filelist[i].path.substring(lastnum + 1);
                        location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + exts;
                    }
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;
        });

        // 页面加载事件
        $(function () {

            //修改上传文件名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });

                return false;
            });
            filelist = JSON.parse($("#hdfiles").val());
            initfiles();

            // 关闭按钮
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Tra/TraSupplierNotification/Index';
            });
        });
    </script>
}
