@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<form class="layui-form layui-form-pane" action="/Tra/TraOperationRecord/AddTraOperationRecord" method="post">
    <div class="layui-card" id="clearDivinput">
        <div class="layui-card-header">运作记录基本信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:100%;clear:none !important; float:left;">
                <div class="layui-btn" id="btnTraOperatione" style="width:15%;" title="点击运作记录基本信息">运作记录基本信息</div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训编号</label>
                <div class="layui-input-inline">
                    <input id="txtOperationNumber" type="text" placeholder="培训编号" class="layui-input" lay-verify="supplier" disabled>

                    <input id="hdOperationSuppId" type="hidden" name="OperationSuppId" />

                    <input id="hdOperationClaimId" type="hidden" name="OperationClaimId" />
                    <input id="hdSupplierName" type="hidden" name="SupplierName" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训主题</label>
                <div class="layui-input-inline">
                    <input id="txtTheme" type="text" placeholder="培训主题" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训目的</label>
                <div class="layui-input-inline">
                    <input id="txtDestination" type="text" placeholder="培训目的" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训负责人</label>
                <div class="layui-input-inline">
                    <input id="txtRectificationUser" type="text" placeholder="培训负责人" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训方式</label>
                <div class="layui-input-inline">
                    <input id="txtTypeText" type="text" placeholder="培训方式" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card" id="clearDivinput">
        <div class="layui-card-header">运作要求信息</div>
        <input type="hidden" id="hdOperationRecordId" name="OperationRecordIdList" />
        <div class="layui-card-body" style="overflow:hidden;">

            <div class="layui-btn" id="btnTraOperationeInfo">
                运作供应商信息
            </div>
            <div class="layui-form">
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th style="text-align:left;">运输供应商名称</th>
                            <th>供应商种类</th>
                        </tr>
                    </thead>
                    <tbody id="OperationClaimAllotlist" style="min-height:400px;"></tbody>
                </table>
                <div id="pageinfos" class="pagebox">
                    <div id="Pagination" class="pagination"></div><div class="pagedetail">共0条记录</div>
                </div>
                <script type="text/html" id="temslist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.SupplierName}}</td>
                        <td>{{c.DictionaryName}}</td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div style="height:0px;position:relative;width:0px;overflow:hidden;">
                <input id="resetDialog" type="text" style="margin:30px 15px 10px 15px;height:30px;width:180px;" />
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">执行记录信息</div>
        <div class="layui-card-body" style="height:170px;overflow:hidden;">
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">培训时间</label>
                <div class="layui-input-inline">
                    <input id="txtRecordTime" type="text" name="RecordTime" lay-verify="required" placeholder="培训时间" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:60%;clear:none !important; float:left;">
                <label class="layui-form-label">培训达标</label>
                <div class="layui-input-inline">
                    <select type="select" name="RecordResult" lay-filter="selRecordResult" id="txtRecordResult">
                        <option></option>
                        <option value="0">否</option>
                        <option value="1">是</option>
                        <option value="2">二次培训</option>
                    </select>
                </div>
                <label style="color:lightcoral;">❀若培训达标为二次培训,二次培训时间必须输入❀</label>
            </div>
            <div id="divTwoRecordTime">
                <div class="layui-form-item"  style="width:33%;clear:none !important; float:left;">
                    <label class="layui-form-label"style="width:130px;"><em>*</em>二次培训时间</label>
                    <div class="layui-input-inline"style="width:170px;">
                        <input id="txtTwoRecordTime" type="text" name="TwoRecordTime" lay-verify="tworecordtime" placeholder="二次培训时间" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label"><em>*</em>培训结论</label>
                    <div class="layui-input-block">
                        <textarea id="txtRecordConclusion" placeholder="培训结论" name="RecordConclusion" lay-verify="tworecordtime" class="layui-textarea"></textarea>
                    </div>
                </div>
            </div>
            @*
                <div class="layui-form-item" >
                    <label class="layui-form-label">培训备注</label>
                    <div class="layui-input-block">
                        <textarea id="txtRecordRemark" placeholder="培训备注" name="RecordRemark" lay-verify="required" class="layui-textarea"></textarea>
                    </div>
                </div>*@
        </div>
    </div>

    <div class="layui-card">
        <div class="layui-card-header">附件信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item">
                <input type="hidden" id="hdfilelist" name="TraOperationRecordFileList" />
                <div class="layui-input-inline" style="width:800px;overflow:hidden;">
                    <div class="layui-btn-group" style="float:left;overflow:hidden;">
                        <div class="layui-inline">
                            <div class="layui-btn layui-btn-normal" id="btnUpload">上传文件</div>
                        </div>
                    </div>
                    <script type="text/html" id="temfilelists">
                        {{each list as c}}
                        <div class="layui-btn-group" style="margin-bottom:5px;">
                            <div class="layui-btn layui-btn-primary">
                                <span class="modify" data-id="{{c.id}}">{{c.filename}}</span>{{c.ext}}
                                <em onclick="downfile('{{c.id}}')"><i class="layui-icon layui-icon-download-circle"></i></em>
                                <em onclick="delfilelist('{{c.id}}')"><i class="layui-icon layui-icon-close-fill"></i></em>
                            </div>
                        </div>
                        {{/each}}
                    </script>
                    <script type="text/html" id="temdictlist">
                        {{each list as c}}
                        <option value="{{c.id}}">{{c.name}}</option>
                        {{/each}}
                    </script>
                </div>
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="delfilelist('{{c.id}}')">删除</a></td>
                    </tr>
                    {{/each}}
                </script>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:20%;margin:0 auto !important;">
                    <button class="layui-btn" lay-submit="" lay-filter="btnSave">保存</button>
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>

        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            //初始化时让二次培训按钮隐藏
            $("#divTwoRecordTime").hide();

            //若培训达标是二次培训时，将二次培训按钮隐藏
            form.on('select(selRecordResult)', function (data) {
                var recordresult = $("#txtRecordResult").val();
                if (recordresult == 2) {
                    $("#divTwoRecordTime").show();//二次培训时间显示
                    $("#txtTwoRecordTime").val("");
                    $("#txtRecordConclusion").val("");
                }
                else {
                    $("#divTwoRecordTime").hide();//二次培训时间隐藏
                    $("#txtTwoRecordTime").val("");
                    $("#txtRecordConclusion").val("");
                }
            });

            //验证结束时间
            laydate.render({
                elem: '#txtRecordTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });

            //验证二次培训时间
            laydate.render({
                elem: '#txtTwoRecordTime'
               , type: 'datetime'
               , format: 'yyyy/MM/dd HH:mm:ss'
            });

            form.verify({
                supplier: function (value, item) {
                    if (!value) {
                        return '运作记录基本信息不能为空！';
                    }
                },
                tworecordtime: function (value, item) {
                    var recordresult = $("#txtRecordResult").val();
                    if (recordresult == 2) {
                        if (!value) {
                            return '二次培训时间和培训结论不能为空！';
                        }
                    }
                }
            });

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Tra/TraOperationRecord/Index&type=patrolrecord',
                    area: ['450px', '300px'],
                });
            });

            // 保存
            form.on('submit(btnSave)', function (data) {
                $.ajax({
                    type: "POST",
                    url: "/Tra/TraOperationRecord/AddTraOperationRecord",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('添加成功');
                            location.href = '/Tra/TraOperationRecord/Index';
                        }
                        if (data.flag == "fail") {
                            layui.layer.msg('信息添加失败');
                        }
                    }
                });
                return false;
            });
        });

        // 定义页面索引及显示条数
        var pageIndex = 0;
        var pageSize = 15;

        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        // 查询总记录数
        function SearchData(tId) {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#OperationClaimAllotlist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/Tra/TraOperationRecord/OperationClaimCount",
                async: false,
                data: {
                    checkTraChooseId: tId
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Pagination").pagination(amount, {
                callback: PageCallbackOfCus,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCus(indexs) {
            pageIndex = indexs;
            InitCusTable(indexs);
        }

        // 查询数据
        function InitCusTable(pageIndexs) {
            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                checkTraChooseId: $("#hdOperationRecordId").val()
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/Tra/TraOperationRecord/OperationClaimList',
                data: userjosn,
                success: function (data) {
                    $("#OperationClaimAllotlist").html(template('temslist', { list: data }));
                    $("#pageinfos").show();
                    if (data == null) {
                        $("#pageinfos").hide();
                        $("#OperationClaimAllotlist").html("<div class='nodata'>暂无数据</div>")
                    }
                    if (data.length == 0) {
                        $("#pageinfos").hide();
                        $("#OperationClaimAllotlist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }
        $(function () {

            //点击后退按钮，清除form表单中文本框的值
            $("#clearDivinput input").val("");

            // 运作信息
            $(document).on('click', '#btnTraOperatione', function () {
                GetTraOperatione();
            });

            // 运作要求信息
            $(document).on('click', '#btnTraOperationeInfo', function () {
                GetTraOperationeInfo();
            });

            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Tra/TraOperationRecord/Index';
            });


            // 修改上传上级名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });
                return false;
            });
        });

        // 设置运作培训基本信息
        function setinfo(id, operationsuppid, operationnumber, theme, destination, rectificationuser, typetext) {
            $("#hdOperationClaimId").val(id);
            $("#hdOperationSuppId").val(operationsuppid);
            $("#txtOperationNumber").val(operationnumber); 
            $("#txtTheme").val(theme);
            $("#txtDestination").val(destination);
            $("#txtRectificationUser").val(rectificationuser);
            $("#txtTypeText").val(typetext);
        }

        // 运作培训基本信息
        function GetTraOperatione() {
            top.window.topdialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '运作培训基本信息',
                content: '/Tra/TraOperationRecord/TraOperationRecordDetail?url=/Tra/TraOperationRecord/Index',
                area: ['1100px', '600px'],
            });
        }

        // 获取选择ID
        function setinfos(ids) {
            if ($("#hdOperationRecordId").val() == "") {
                $("#hdOperationRecordId").val(ids);
            }
            else {
                var tId = $("#hdOperationRecordId").val();
                $("#hdOperationRecordId").val(tId + "," + ids);
            }

            var tempTraChooseIds = $("#hdOperationRecordId").val().split(',');
            TraChooseIds = tempTraChooseIds.map(function (data) {
                return +data;
            });
            SearchData($("#hdOperationRecordId").val());
        }

        // 选择供应商种类
        function GetTraOperationeInfo() {
            if ($("#hdOperationClaimId").val() == "") {
                top.layer.msg('请选择记录信息！');
                return;
            }
            else {
                top.window.topdialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '选择供应商信息',
                    content: '/Tra/TraOperationRecord/TraOperationClaimDetail?url=/Tra/TraOperationRecord/Index&ids=' + $("#hdOperationRecordId").val() + '&idss=' + $("#hdOperationClaimId").val() + '&type=add',
                    area: ['700px', '580px'],
                });
            }
        }
    </script>
}
