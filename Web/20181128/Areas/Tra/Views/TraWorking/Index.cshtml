@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="layui-card">
    <div class="layui-card-body">
        <blockquote class="layui-elem-quote">
            <div class="layui-inline">
                <div class="layui-form">
                    供应商名称：
                    <div class="layui-input-inline">
                        <input type="text" name="SupplierName" lay-verify="required" placeholder="" class="layui-input" id="txtSupplierName">
                    </div>
                    &nbsp;&nbsp;
                    运输供应商编号：
                    <div class="layui-input-inline">
                        <input type="text" name="TransportNumber" lay-verify="required" placeholder="" class="layui-input" id="txtTransportNumber">
                    </div>
                    &nbsp;&nbsp;
                    车牌号：
                    <div class="layui-input-inline">
                        <input type="text" name="PlateNumber" lay-verify="required" placeholder="" class="layui-input" id="txtPlateNumber">
                    </div>
                    &nbsp;&nbsp;
                    运作时间：
                    <div class="layui-input-inline">
                        <input type="text" name="WorkingTime" lay-verify="required" placeholder="" class="layui-input" id="txtWorkingTime">
                    </div>
                    &nbsp;&nbsp;
                    <br />
                    <br />
                    运作类型：
                    <div class="layui-input-inline">
                        <select name="WorkingType" lay-verify="" placeholder="" class="layui-select" id="txtWorkingType">
                            <option></option>
                            <option value="0">到货</option>
                            <option value="1">到车</option>
                            <option value="2">发货</option>
                            <option value="3">其他</option>
                        </select>
                    </div>
                    &nbsp;&nbsp;
                    考核类型：
                    <div class="layui-input-inline">
                        <select name="CheckType" lay-verify="" placeholder="" class="layui-select" id="txtCheckType">
                            <option></option>
                            <option value="0">调拨</option>
                            <option value="1">干线</option>
                            <option value="2">终端</option>
                        </select>
                    </div>
                    <a class="layui-btn" id="btnSearch">查询</a>
                    <a class="layui-btn layui-btn-normal " id="btnAdd">添加</a>
                    <a class="layui-btn layui-btn-primary " id="btnExport">导出</a>
                    <a class="layui-btn layui-btn-normal " id="btnImport">导入</a>
                    <a id="btnDown" style="cursor:pointer;margin-left:20px;">导入模板下载</a>
                </div>
            </div>
        </blockquote>
        <div class="layui-form">
            <div class="forzenbox">
                <div class="normaltable ">
                    <table class="layui-table">
                        <thead>
                            <tr>
                                <th style="text-align:left;">运作编号</th>
                                <th>运输供应商名称</th>
                                <th>运输供应商编号</th>
                                <th>考核类型</th>
                                <th>车牌号</th>
                                <th>运作类型</th>
                                <th>运作时间</th>
                                @*<th>运输次数</th>*@
                                <th>载运数量</th>
                                <th>载运价值</th>
                                @*<th>异常数量</th>*@
                                @*<th>状态</th>*@
                                <th>时效范围</th>
                                <th>及时</th>
                                <th>使用状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="TraWorkinglist" style="min-height:400px;"></tbody>
                    </table>
                </div>
                <div class="forzentable"></div>
            </div>
            <div id="pageinfos" class="pagebox">
                <div id="Pagination" class="pagination"></div><div class="pagedetail">共0条记录</div>
            </div>
            <script type="text/html" id="temslist">
                {{each list as c}}
                <tr>
                    <td>{{c.WorkingNumber}}</td>
                    <td>{{c.SupplierName}}</td>
                    <td>{{c.TransportNumber}}</td>
                    <td>{{c.CheckTypeName}}</td>
                    <td>{{c.PlateNumber}}</td>
                    <td>{{c.WorkingTypeName}}</td>
                    <td>{{c.WorkingTime}}</td>
                    <td>{{c.CarryNumber}}</td>
                    <td>{{c.CarryValue}}</td>
                    <td>{{c.RangeTypeName}}</td>
                    <td>{{c.IsTimelyName}}</td>
                    <td>{{c.UseStateName}}</td>
                    <td>
                        <a class="layui-btn layui-btn-sm btnEdit" data-id="{{c.WorkingId}}" data-state="{{c.UseState}}">
                            <i class="iconfont icon-edit"></i>编辑
                        </a>
                        <a class="layui-btn layui-btn-danger layui-btn-sm btnDelete" data-id="{{c.WorkingId}}" data-state="{{c.UseState}}">
                            <i class="layui-icon"></i>作废
                        </a>
                        <a class="layui-btn layui-btn-normal layui-btn-sm btnView" data-id="{{c.WorkingId}}">
                            <i class="layui-icon"></i>查看
                        </a>
                    </td>
                </tr>
                {{/each}}
            </script>
        </div>
        <div style="height:0px;position:relative;width:0px;overflow:hidden;">
            <input id="resetDialog" type="text" style="margin:30px 15px 10px 15px;height:30px;width:180px;" />
        </div>
        <script type="text/html" id="temslists">
            <div class="layui-table-fixed layui-table-fixed-r">
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody style="min-height:400px;">
                        {{each list as c}}
                        <tr>
                            <td lay-data="{width:80, sort: true, fixed: 'right'}">
                                <a class="layui-btn layui-btn-sm btnEdit" data-id="{{c.WorkingId}}" data-state="{{c.UseState}}">
                                    <i class="iconfont icon-edit"></i>编辑
                                </a>
                                <a class="layui-btn layui-btn-danger layui-btn-sm btnDelete" data-id="{{c.WorkingId}}" data-state="{{c.UseState}}">
                                    <i class="layui-icon"></i>作废
                                </a>
                                <a class="layui-btn layui-btn-normal layui-btn-sm btnView" data-id="{{c.WorkingId}}">
                                    <i class="layui-icon"></i>查看
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </script>
        <script type="text/html" id="temdictlist">
            {{each list as c}}
            <option value="{{c.id}}">{{c.name}}</option>
            {{/each}}
        </script>
    </div>
</div>

@section scripts{
    <script>
        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;
            //验证开始时间
            laydate.render({
                elem: '#txtWorkingTime'
            });

            //导入按钮
            layui.upload.render({
                elem: '#btnImport'
                   , url: '/index/upload?type=tra'
                   , accept: 'file'
                   , auto: true
                   , done: function (res) {
                       if (res.flag == "ok") {
                           var path = res.path;
                           var index = layer.load(1, {
                               shade: [0.3, '#000'] //0.1透明度的白色背景
                           });
                           $.ajax({
                               type: "POST",
                               url: "/Tra/TraWorking/ImportInfo",
                               async: false,
                               data: { path: path },
                               dataType: 'json',
                               success: function (data) {
                                   if (data.flag == 'ok') {

                                       // 提示内容
                                       var content = "";
                                       if (data.failcount != 0) {
                                           content = '上传成功' + data.successcount + '条记录,上传失败' + data.failcount + '条记录<br>' + data.content + '上传失败!';
                                       }
                                       else {
                                           content = '上传成功' + data.successcount + '条记录';
                                       }
                                       top.layui.layer.msg(content);
                                       SearchData();
                                   }
                                   if (data.flag == 'fail') {

                                       // 提示内容
                                       var content = "";
                                       content = '上传失败' + data.failcount + '条记录';
                                       top.layui.layer.msg(content);
                                   }
                                   layui.layer.close(index);
                               }
                           });

                       }
                       return false;
                   }
            });
        });

        // 定义页面索引及显示条数
        var pageIndex = 0;
        var pageSize = 15;

        // 绑定事件
        $(function () {
            // 查询
            SearchData();

            //新增按钮
            $(document).on('click', '#btnAdd', function () {
                AddData();
            });

            //查询按钮
            $(document).on('click', '#btnSearch', function () {
                SearchData();
            });

            //导出按钮
            $(document).on('click', '#btnExport', function () {
                top.window.export = top.layui.layer.load(1, { shade: [0.3, '#000'] });
                $.post('/Tra/TraWorking/Export'
                    , {
                        supplierName: $("#txtSupplierName").val()//供应商名称
                      , transportNumber: $("#txtTransportNumber").val()//运输供应商编号
                      , plateNumber: $("#txtPlateNumber").val() //车牌号
                      , workingTime: $("#txtWorkingTime").val() //运作时间
                      , workingType: $("#txtWorkingType").val() //运作类型
                      , checkType: $("#txtCheckType").val() //考核类型
                    }
                    , function (data) {
                        if (data.flag == 'noauth') {
                            top.layui.layer.close(top.window.export);
                            top.layui.layer.msg(data.content);
                        }
                        if (data.flag == 'success') {
                            location.href = '/excel/down?guid=' + data.guid + "&name=每日车辆运作信息记录";
                            top.layui.layer.close(top.window.export);
                        }
                    }, 'json');
            });

            //编辑按钮
            $(document).on('click', '.btnEdit', function () {
                var tId = $(this).data("id");//仓储供应商选择id
                var tState = $(this).data("state");//信息状态
                ModifyData(tId, tState);
            });

            //明细按钮
            $(document).on('click', '.btnDetail', function () {
                var tId = $(this).data("id");//仓储供应商选择id
                var tState = $(this).data("state");//信息状态
                DetailData(tId, tState);
            });

            //提交按钮
            $(document).on('click', '.btnSubmit', function () {
                var tId = $(this).data("id");//仓储供应商选择id
                var tState = $(this).data("state");//状态
                SubmitData(tId, tState);
            });

            //作废按钮
            $(document).on('click', '.btnDelete', function () {
                var tId = $(this).data("id");//仓储供应商选择id
                var tState = $(this).data("state");//状态
                DeleteData(tId, tState);
            });

            //查看按钮
            $(document).on('click', '.btnView', function () {
                var tId = $(this).data("id");//仓储供应商选择id
                ShowData(tId);
            });

            //导入模板下载
            $(document).on('click', '#btnDown', function () {
                location.href = '/excel/downtemplate?name=working&displayname=每日车辆运作信息记录';
            });

        });

        // 新增
        function AddData() {
            location.href = '/Tra/TraWorking/Add';
        }

        // 查询总记录数
        function SearchData() {

            // 总记录数
            var amount = 0;

            // 页面索引
            pageIndex = 0;

            // 等待时显示
            $("#TraWorkinglist").html("<tr class='loadings' ><td colspan=8>数据加载中……<td></tr>");

            // 查询总记录数
            $.ajax({
                type: "POST",
                url: "/Tra/TraWorking/TraWorkingCount",
                async: false,
                data: {
                    supplierName: $("#txtSupplierName").val()//供应商名称
                      , transportNumber: $("#txtTransportNumber").val()//运输供应商编号
                      , plateNumber: $("#txtPlateNumber").val() //车牌号
                      , workingTime: $("#txtWorkingTime").val() //运作时间
                      , workingType: $("#txtWorkingType").val() //运作类型
                      , checkType: $("#txtCheckType").val() //考核类型
                },
                success: function (data) {
                    amount = data;
                    $(".pagedetail").text("共" + amount + "条");
                }
            });

            // 分页配置
            $("#Pagination").pagination(amount, {
                callback: PageCallbackOfCus,
                prev_text: '<',       //上一页按钮里text
                next_text: '>',       //下一页按钮里text
                items_per_page: pageSize,  //显示条数
                num_display_entries: 6,    //连续分页主体部分分页条目数
                current_page: pageIndex,   //当前页索引
                num_edge_entries: 2        //两侧首尾分页条目数
            });
        }

        // 分页参数
        function PageCallbackOfCus(indexs, jq) {
            pageIndex = indexs;//页面索引
            InitCusTable(indexs);
        }

        // 查询数据
        function InitCusTable(pageIndexs) {
            var userjosn = {
                index: (pageIndex + 1),
                size: pageSize,
                supplierName: $("#txtSupplierName").val()//供应商名称
                      , transportNumber: $("#txtTransportNumber").val()//运输供应商编号
                      , plateNumber: $("#txtPlateNumber").val() //车牌号
                      , workingTime: $("#txtWorkingTime").val() //运作时间
                      , workingType: $("#txtWorkingType").val() //运作类型
                      , checkType: $("#txtCheckType").val() //考核类型
            };
            $.ajax({
                type: "POST",
                dataType: "json",
                url: '/Tra/TraWorking/TraWorkingList',
                data: userjosn,
                success: function (data) {
                    $("#TraWorkinglist").html(template('temslist', { list: data }));
                    $(".forzentable").html(template('temslists', { list: data }));
                    $("#pageinfos").show();
                    if (data.length == 0) {
                        $("#pageinfos").hide();
                        $("#TraWorkinglist").html("<div class='nodata'>暂无数据</div>")
                    }
                }
            });
        }

        // 编辑
        function ModifyData(tId, tState) {
            if (tState != '0') {
                top.layer.msg('只能编辑未使用的运作信息！');
                return;
            }
            location.href = '/Tra/TraWorking/Edit?tId=' + tId;
        }

        // 作废
        function DeleteData(tId, tState) {
            if (tState != '0') {
                top.layer.msg('只能作废未使用的运作信息！');
                return;
            }
            top.layer.confirm('您确定作废此数据吗？', ['确定', '取消'], function () {
                $.ajax({
                    type: "POST",
                    url: '/Tra/TraWorking/InvalidState',
                    data: { tId: tId },
                    dataType: "json",
                    success: function (data) {
                        if (data.flag == "success") {
                            top.layer.closeAll();
                            SearchData();
                        }
                        if (data.flag == "noauth") {
                            top.layer.msg(data.content);
                        }
                        if (data.flag == "fail") {
                            top.layer.msg(data.content);
                        }
                    }
                });
            }, function () { }
            );
        }

        // 查看
        function ShowData(tId) {
            location.href = '/Tra/TraWorking/Check?tId=' + tId;
        }

    </script>
}
