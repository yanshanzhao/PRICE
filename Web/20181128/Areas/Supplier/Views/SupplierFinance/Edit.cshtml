            initfiles();

            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Supplier/SupplierFinance/Index';
            });
        });

        window.Dict_0 = [];
        window.Dict_1 = [];
        window.Dict_2 = [];
        window.Dict_3 = [];
        window.Dict_6 = [];
        window.Dict_9 = [];
