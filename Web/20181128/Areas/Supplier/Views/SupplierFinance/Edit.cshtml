@section scripts{
    <script>
        // initfiles/delfilelist/setfilename/downfile 附件上传/删除/更改名称/下载
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 合作意愿
            form.on('switch(CooperationType)', function (data) {
                $("#hdCooperationType").val(this.checked ? "1" : "0");
            });

            // 需要考核
            form.on('switch(IsAssess)', function (data) {
                $("#hdIsAssess").val(this.checked ? "1" : "0");
            });

            // 现场考察
            form.on('switch(LocaleInspect)', function (data) {
                $("#hdLocaleInspect").val(this.checked ? "1" : "0");
            });

            // 签订合同
            form.on('switch(SignContract)', function (data) {
                $("#hdSignContract").val(this.checked ? "1" : "0");

                //
                if ($("#hdSignContract").val() == 0) {
                    $("#divContractNumber").hide();
                    $("#txtContractNumber").val("0");
                    $("#divTempContractBeginTime").hide();
                    $("#txtContractBeginTime").val("");
                    $("#divTempContractEndTime").hide();
                    $("#txtContractEndTime").val("");
                } else {
                    $("#divContractNumber").show();
                    $("#divTempContractBeginTime").show();
                    $("#divTempContractEndTime").show();
                }
            });

            // 参与培训
            form.on('switch(IsCultivate)', function (data) {
                $("#hdIsCultivate").val(this.checked ? "1" : "0");

                //
                if ($("#hdIsCultivate").val() == 0) {
                    $("#divCultivateIntro").hide();
                    $("#txtCultivateIntro").val("0");
                } else {
                    $("#divCultivateIntro").show();
                }
            });

            // 验证
            form.verify({
                signcontract: function (value, item) {
                    if ($("#hdSignContract").val() == 1) {
                        if (!value) {
                            return '合同信息不能为空！';
                        }
                    }
                },
                iscultivate: function (value, item) {
                    if ($("#hdIsCultivate").val() == 1) {
                        if (!value) {
                            return '培训信息不能为空！';
                        }
                    }
                }
            });

            // 时间样式
            //laydate.render({
            //    elem: '#txtDepartureTime',
            //    type: 'datetime',
            //   format: 'yyyy/MM/dd HH:mm:ss'
            //});
            //laydate.render({
            //    elem: '#txtArrivalTime',
            //    type: 'datetime',
            //    format: 'yyyy/MM/dd HH:mm:ss'
            //});
            //laydate.render({
            //    elem: '#txtBusinessHours',
            //    type: 'datetime',
            //    format: 'yyyy/MM/dd HH:mm:ss'
            //});
            //laydate.render({
            //    elem: '#txtOperationTime',
            //    type: 'datetime',
            //    format: 'yyyy/MM/dd HH:mm:ss'
            //});
            laydate.render({
                elem: '#txtOfficialTime',
                type: 'datetime',
                format: 'yyyy/MM/dd HH:mm:ss'
            });
            laydate.render({
                elem: '#txtContractBeginTime',
                type: 'datetime',
                format: 'yyyy/MM/dd HH:mm:ss'
            });
            laydate.render({
                elem: '#txtContractEndTime',
                type: 'datetime',
                format: 'yyyy/MM/dd HH:mm:ss'
            });

            // 提交保存
            form.on('submit(btnSave)', function (data) {
                alert($("#txtContractNumber").val());
                $.ajax({
                    type: "POST",
                    url: "/Supplier/SupplierFinance/EditSupplierFinance",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('修改成功');
                            location.href = '/Supplier/SupplierFinance/Index';
                        }
                    }
                });
                return false;
            });
        });

        // 文件上传弹窗
        function selfiles() {
            top.window.filedialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '文件上传',
                content: '/supplier/SupplierTransport/files?url=/Supplier/SupplierFinance/Index&type=tra', //typetra可选值tra|storage|message|base
                area: ['500px', '300px'],
            });
        }

        // 文件上传重复判断
        function ishasfiles(fns) {
            for (var i in filelist) {
                if (filelist[i].filename == fns) {
                    return true;
                }
            }
            return false;
        }

        // 添加新文件
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        // 页面加载事件
        $(function () {

            // 签订合同是否
            if ($("#hdSignContract").val() == 0) {
                $("#divContractNumber").hide();
                $("#divTempContractBeginTime").hide();
                $("#divTempContractEndTime").hide();
                $("#txtContractNumber").val("0");
                $("#txtContractBeginTime").val("");
                $("#txtContractEndTime").val("");
            } else {
                $("#divContractNumber").show();
                $("#divTempContractBeginTime").show();
                $("#divTempContractEndTime").show();
            }

            // 参与培训是否
            if ($("#hdIsCultivate").val() == 0) {
                $("#divCultivateIntro").hide();
                $("#txtCultivateIntro").val("0");
            }
            else {
                $("#divCultivateIntro").show();
            }

            // 文件上传
            $(document).on('click', '#btnUpload', function () {
                selfiles();
            });

            // 下拉列表查询
            dictinits();

            // 供应商类别
            $("#selSupplierType").val($("#hdSupplierType").val());

            // 企业性质
            $("#selEnterpriseType").val($("#hdEnterpriseType").val());

            // 证件类型
            $("#selPapersType").val($("#hdPapersType").val());

            // 供应商种类
            $("#selTransportKind").val($("#hdTransportKind").val());

            // 配送供应商范围
