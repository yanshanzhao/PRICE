@{
    Layout = "~/Views/Shared/_Home.cshtml";
}
@model SRM.Model.Supplier.SupplierStorageModel
<form class="layui-form layui-form-pane" action="/Supplier/SupplierStorage/EditSupplierStorage" method="post">
    <div class="layui-card">
        <div class="layui-card-header">供应商信息</div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>供应商名称</label>
                <div class="layui-input-inline" style="width:355px;">
                    <input id="txtSupplierName" type="text" value="@Model.SupplierName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>企业地址</label>
                <div class="layui-input-inline" style="width:361px;">
                    <input id="txtEnterpriseAddresses" type="text" value="@Model.EnterpriseAddresses" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>供应商编号</label>
                <div class="layui-input-inline">
                    <input id="txtSupplierNumber" type="text" value="@Model.SupplierNumber" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>供应商类别</label>
                <div class="layui-input-inline">
                    <input id="txtSupplierTypeName" type="text" value="@Model.SupplierTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>企业性质</label>
                <div class="layui-input-inline">
                    <input id="txtEnterpriseTypeName" type="text" value="@Model.EnterpriseTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">证件类型</label>
                <div class="layui-input-inline">
                    <input id="txtPapersTypeName" type="text" value="@Model.PapersTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">证件号码</label>
                <div class="layui-input-inline">
                    <input id="txtPapersNumber" type="text" value="@Model.PapersNumber" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>联系人</label>
                <div class="layui-input-inline">
                    <input id="txtContactsName" type="text" value="@Model.ContactsName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>联系人职位</label>
                <div class="layui-input-inline">
                    <input id="txtContactsPosition" type="text" value="@Model.ContactsPosition" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>联系电话</label>
                <div class="layui-input-inline">
                    <input id="txtContactsPhone" type="text" value="@Model.ContactsPhone" name="ContactsPhone" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商信息</div>
        <div class="layui-card-body" style="overflow:visible;">
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:130px;"><em>*</em>仓储供应商编号</label>
                <div class="layui-input-inline" style="width:335px;">
                    <input id="txtStorageNumber" type="text" name="StorageNumber" value="@Model.StorageNumber" class="layui-input" disabled>
                    <input name="StorageId" type="hidden" value="@Model.StorageId" />
                    <input name="SupplierId" type="hidden" value="@Model.SupplierId" />
                </div>
            </div>
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:130px;"><em>*</em>仓库详细地址</label>
                <div class="layui-input-inline" style="width:335px;">
                    <input id="txtAddress" type="text" name="Address" value="@Model.Address" lay-verify="required" maxlength="400" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>仓库名称</label>
                <div class="layui-input-inline">
                    <input id="txtStorageName" type="text" lay-verify="required" name="StorageName" maxlength="100" class="layui-input" value="@Model.StorageName" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>仓库业主</label>
                <div class="layui-input-inline">
                    <input id="txtStorageOwner" type="text" name="StorageOwner" lay-verify="required" maxlength="100" class="layui-input" value="@Model.StorageOwner" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>仓库性质</label>
                <div class="layui-input-inline">
                    <select id="txtStorageNature" name="StorageNature" lay-verify="required" class="select">
                        <option value="">请选择类型名称</option>
                        <option value="0">立体</option>
                        <option value="1">平面</option>
                        <option value="3">综合</option>
                    </select>
                    <input id="hdStorageNature" type="hidden" value="@Model.StorageNature" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:135px"><em>*</em>库区总面积(平方)</label>
                <div class="layui-input-inline" style="width:165px">
                    <input id="txtTotalArea" type="text" name="TotalArea" value="@Model.TotalArea" lay-verify="required|totalArea" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:135px"><em>*</em>库区总托盘数量</label>
                <div class="layui-input-inline" style="width:165px">
                    <input id="txtTotalTray" type="text" name="TotalTray" value="@Model.TotalTray" lay-verify="required|tray" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:135px"><em>*</em>拟租房面积(平米)</label>
                <div class="layui-input-inline" style="width:165px">
                    <input id="txtRentArea" type="text" name="RentArea" value="@Model.RentArea" lay-verify="required|rentArea" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:135px"><em>*</em>拟租托盘数量</label>
                <div class="layui-input-inline" style="width:165px">
                    <input id="txtRentTray" type="text" name="RentTray" value="@Model.RentTray" lay-verify="required|tray" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>空闲面积</label>
                <div class="layui-input-inline">
                    <input id="txtLeisureArea" type="text" name="LeisureArea" value="@Model.LeisureArea" lay-verify="required|leisureArea" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label"><em>*</em>合作意愿</label>
                <div class="layui-input-block">
                    <input @(Html.Raw(Model.CooperationType == 1 ? "checked" : "")) type="checkbox" lay-skin="switch" lay-filter="cooperationType" lay-text="是|否">
                    <input id="hdCooperationType" type="hidden" name="CooperationType" value="@Model.CooperationType" />
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">现场考察</label>
                <div class="layui-input-block">
                    <input @(Html.Raw(Model.LocaleInspect == 1 ? "checked" : "")) type="checkbox" lay-skin="switch" lay-filter="localeInspect" lay-text="是|否">
                    <input id="hdLocaleInspect" type="hidden" name="LocaleInspect" value="@Model.LocaleInspect" />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label" style="width:116px">同行业运作经验</label>
                <div class="layui-input-inline" style="width:973px; margin-right:0 !important">
                    <textarea id="txtOperationExperience" name="OperationExperience" class="layui-textarea">@Model.OperationExperience</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">发展潜力</label>
                <div class="layui-input-block">
                    <textarea id="txtCapacity" name="Capacity" class="layui-textarea">@Model.Capacity</textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-form-item">
                    <label class="layui-form-label">备注</label>
                    <div class="layui-input-block">
                        <textarea id="txtRemark" name="Remark" maxlength="400" class="layui-textarea">@Model.Remark</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">附件信息 </div>
        <div class="layui-card-body" style="overflow:hidden;">
            <div class="layui-form-item" style="margin-top:10px;">
                <input type="hidden" id="hdfiles" value="@ViewBag.files" /> 
                <input type="hidden" id="hdfilelist" name="SuppFileList" />
                <div class="layui-input-inline" style="width:800px;overflow:hidden;">
                    <div class="layui-btn-group" style="float:left;overflow:hidden;">
                        <div class="layui-inline">
                            <div class="layui-btn layui-btn-normal" id="btnUpload">上传文件</div>
                        </div>
                    </div> 
                </div>
                <table class="layui-table">
                    <thead>
                        <tr>
                            <th>文件类型</th>
                            <th>文件地址</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody id="filelist"></tbody>
                </table>
                <script type="text/html" id="temfilelist">
                    {{each list as c}}
                    <tr>
                        <td>{{c.filename}}</td>
                        <td>{{c.path}}</td>
                        <td><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="downfile('{{c.id}}')">下载</a><a class="layui-btn layui-btn-danger layui-btn-sm" onclick="delfilelist('{{c.id}}')">删除</a></td> 
                    </tr>
                    {{/each}}
                </script> 
            </div>  
            <div class="layui-form-item">
                <div class="layui-input-block" style="width:20%;margin:0 auto !important;">
                    <button class="layui-btn" lay-submit="" lay-filter="btnSave">保存</button>
                    <a class="layui-btn" id="btnGoBack">返回</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script> 
        // initfiles/delfilelist/setfilename/downfile 附件上传/删除/更改名称/下载
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    if (filelist[i].path.lastIndexOf('.') != -1) {
                        var lastnum = filelist[i].path.lastIndexOf('.');
                        var exts = filelist[i].path.substring(lastnum + 1);
                        location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + exts;
                    }
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 合作意愿
            form.on('switch(cooperationType)', function (data) {
                $("#hdCooperationType").val(this.checked ? "1" : "0");
            });

            // 现场考察
            form.on('switch(localeInspect)', function (data) {
                $("#hdLocaleInspect").val(this.checked ? "1" : "0");
            });

            // 验证
            form.verify({
                totalArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数';
                    }
                },

                rentArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数';
                    }
                },

                leisureArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数';
                    }
                },

                tray: function (value, item) {
                    var reg = /^[1-9]\d*$/;
                    if (!reg.test(value)) {
                        return '只能输入大于0的正整数！';
                    }
                }
            });

            // 得分框blur事件
            $(document).on('blur', '#txtLeisureArea', function () {
                if ($("#txtLeisureArea").val() > $("#txtTotalArea").val()) {
                    top.layui.layer.msg('空闲面积不得大于库区总面积！');
                    $("#txtLeisureArea").val("");
                    $("#txtLeisureArea").focus();
                    return false;
                }
            });

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Supplier/SupplierStorage/Index&type=storage',
                    area: ['450px', '300px'],
                });
            });

            // 提交
            form.on('submit(btnSave)', function (data) {
                 
                $.ajax({
                    type: "POST",
                    url: "/Supplier/SupplierStorage/EditSupplierStorage",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('修改成功');
                            location.href = '/Supplier/SupplierStorage/Index';
                             
                        } 
                    }
                });
                return false;
            });
        });

        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        // 页面加载事件
        $(function () {

            // 库房性质赋值
            $("#txtStorageNature").val($("#hdStorageNature").val());
             
            filelist = JSON.parse($("#hdfiles").val());
            initfiles();

            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Supplier/SupplierStorage/Index';
            });
        });
    </script>
}
