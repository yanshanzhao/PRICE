@section scripts{
    <script>
        // initfiles/delfilelist/setfilename/downfile 附件上传/删除/更改名称/下载
        var filelist = [];
        function initfiles() {
            $("#filelist").html(template('temfilelist', { list: filelist }));
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function delfilelist(ids) {
            var tem = [];
            for (var i in filelist) {
                if (filelist[i].id != ids) {
                    tem.push(filelist[i]);
                }
            }

            filelist = tem;
            initfiles();
        }
        function setfilename(ids, names) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    filelist[i].filename = names;
                }
            }
            $("#hdfilelist").val(JSON.stringify(filelist));
        }
        function downfile(ids) {
            for (var i in filelist) {
                if (filelist[i].id == ids) {
                    location.href = '/index/down?url=' + filelist[i].path + "&name=" + filelist[i].filename + "&ext=" + filelist[i].ext;
                }
            }
        }

        layui.use(['form', 'element', 'laydate', 'upload'], function () {
            var form = layui.form, ele = layui.element, laydate = layui.laydate;

            // 开关
            form.on('switch(cooperationType)', function (data) {
                $("#hdCooperationType").val(this.checked ? "1" : "0");
            });
            form.on('switch(localeInspect)', function (data) {
                $("#hdLocaleInspect").val(this.checked ? "1" : "0");
            });
         
            // 验证
            form.verify({
                supplier: function (value, item) {
                    if (!value) {
                        return '供应商信息不能为空！';
                    }
                },

                totalArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数！';
                    }
                },

                rentArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数！';
                    }
                },

                leisureArea: function (value, item) {
                    if (!new RegExp("^([0-9])[0-9]*(\\.\\w*)?$").test(value)) {
                        return '只能输入数字或小数！';
                    }
                },

                tray: function (value, item) {
                    var reg = /^[1-9]\d*$/;
                    if (!reg.test(value)) {
                        return '只能输入大于0的正整数！';
                    }
                }
            });

            // 得分框blur事件
            $(document).on('blur', '#txtLeisureArea', function () {
                if ($("#txtLeisureArea").val() > $("#txtTotalArea").val()) {
                    top.layui.layer.msg('空闲面积不得大于库区总面积！');
                    $("#txtLeisureArea").val("");
                    $("#txtLeisureArea").focus();
                    return false;
                }
            });

            // 上传文件
            $(document).on('click', '#btnUpload', function () {
                top.window.filedialog = top.layui.layer.open({
                    type: 2,
                    shade: 0.2,
                    title: '文件上传',
                    content: '/supplier/SupplierTransport/files?url=/Supplier/SupplierStorage/Index&type=storage',
                    area: ['450px', '300px'],
                });
            });

            //文件上传
            //layui.upload.render({
            //    elem: '#btnUpload'
            //   , url: '/index/upload?type=storage'
            //   , accept: 'file'
            //   , auto: true
            //   , done: function (res) {
            //       if (res.flag == "ok") {
            //           filelist.push({ id: new Date().getTime(), path: res.path, filename: res.filename, ext: res.ext });
            //           initfiles();
            //       }
            //       return false;
            //   }
            //});

            // 提交
            form.on('submit(btnSave)', function (data) {

                $("#btnSave").attr("display", "none");

                $.ajax({
                    type: "POST",
                    url: "/Supplier/SupplierStorage/AddSupplierStorage",
                    data: data.field,
                    async: false,
                    success: function (data) {
                        if (data.flag == 'success') {
                            layui.layer.msg('添加成功！');
                            location.href = '/Supplier/SupplierStorage/Index';
                        }
                        if (data.flag == "fail") {
                            layui.layer.msg('信息添加失败！');
                            $("#btnSave").attr("display", "inline");
                        }
                    }
                });
                return false;
            });
        });

        //添加新文件(新增)
        function setnewfiles(filename, path) {
            filelist.push({ id: new Date().getTime(), path: path, filename: filename, ext: '' });
            initfiles();
        }

        $(function () {
            // 返回
            $(document).on('click', '#btnGoBack', function () {
                location.href = '/Supplier/SupplierStorage/Index';
            });

            // 供应商信息
            $(document).on('click', '#btnSupplier', function () {
                GetSupplier();
            });

            // 修改上传上级名称
            $(document).on('click', '.modify', function () {
                var td = $(this);
                var txt = $.trim(td.text());
                var input = td.data("type") == "area" ? $("<textarea>" + $.trim(td.html().replace(/<br>/g, "\n")) + "</textarea>") : $("<input type='text'value='" + txt + "'/>");
                input.width(td.width() + 10).height(td.height() + 10);
                td.html(input);
                input.click(function () { return false; });
                input.trigger("focus");
                input.blur(function () {
                    var str = input.val().replace(/\n/g, '<br>')
                    if (!str) {
                        layui.layer.msg('文件名称不能为空！');
                        td.html(txt);
                        return;
                    }
                    td.html(str);
                    setfilename(td.data("id"), str);
                });
                return false;
            });
        });

        // 设置供应商信息
        function setinfo(id, suppliertype, enterprisetype, paperstype, suppliername, suppliernumber, suppliertypename, enterprisetypename, paperstypename, papersnumber, enterpriseaddresses, contactsname, contactsposition, contactsphone) {
            $("#hdSupplierId").val(id);
            $("#txtSupplierName").val(suppliername);
            $("#txtSupplierNumber").val(suppliernumber);
            $("#hdSupplierType").val(suppliertype);
            $("#txtSupplierTypeName").val(suppliertypename);
            $("#hdEnterpriseType").val(enterprisetype);
            $("#txtEnterpriseTypeName").val(enterprisetypename);
            $("#hdPapersType").val(paperstype);
            $("#txtPapersTypeName").val(paperstypename);
            $("#txtPapersNumber").val(papersnumber);
            $("#txtEnterpriseAddresses").val(enterpriseaddresses);
            $("#txtContactsName").val(contactsname);
            $("#txtContactsPosition").val(contactsposition);
            $("#txtContactsPhone").val(contactsphone);
        }

        // 供应商信息
        function GetSupplier() {
            top.window.topdialog = top.layui.layer.open({
                type: 2,
                shade: 0.2,
                title: '选择供应商信息',
                content: '/Supplier/SupplierStorage/SupplierDetail?url=/Supplier/SupplierStorage/Index',
                area: ['1100px', '600px'],
            });
        }
    </script>
}
