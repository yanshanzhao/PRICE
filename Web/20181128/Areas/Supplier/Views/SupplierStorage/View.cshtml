            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">供应商类别</label>
                <div class="layui-input-inline">
                    <input id="txtSupplierTypeName" type="text" value="@Model.SupplierTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">企业性质</label>
                <div class="layui-input-inline">
                    <input id="txtEnterpriseTypeName" type="text" value="@Model.EnterpriseTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">证件类型</label>
                <div class="layui-input-inline">
                    <input id="txtPapersTypeName" type="text" value="@Model.PapersTypeName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">证件号码</label>
                <div class="layui-input-inline">
                    <input id="txtPapersNumber" type="text" value="@Model.PapersNumber" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">联系人</label>
                <div class="layui-input-inline">
                    <input id="txtContactsName" type="text" value="@Model.ContactsName" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">联系人职位</label>
                <div class="layui-input-inline">
                    <input id="txtContactsPosition" type="text" value="@Model.ContactsPosition" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">联系电话</label>
                <div class="layui-input-inline">
                    <input id="txtContactsPhone" type="text" value="@Model.ContactsPhone" name="ContactsPhone" class="layui-input" disabled>
                </div>
            </div>
        </div>
    </div>
    <div class="layui-card">
        <div class="layui-card-header">仓储供应商信息</div>
        <div class="layui-card-body" style="overflow:hidden;"> 
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label" style="width:130px">仓储供应商编号</label>
                <div class="layui-input-inline" style="width:326px;">
                    <input id="txtStorageNumber" type="text" value="@Model.StorageNumber" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:50%;clear:none !important; float:left;">
                <label class="layui-form-label">仓库详细地址</label>
                <div class="layui-input-inline" style="width:356px;">
                    <input id="txtAddress" type="text" value="@Model.Address" class="layui-input" disabled>
                </div>
            </div>
            <div class="layui-form-item" style="width:33%;clear:none !important; float:left;">
                <label class="layui-form-label">仓库名称</label>
                <div class="layui-input-inline">
                    <input id="txtStorageName" type="text" name="StorageName" maxlength="100" class="layui-input" value="@Model.StorageName"  disabled/>
